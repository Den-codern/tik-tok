  "bugs": {
    "url": "https://github.com/Den-codern/toktik/issues"
  },
  "homepage": "https://github.com/Den-codern/toktik#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "js-cookie": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.0",
    "video-react": "^0.15.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15"
  }
}
